<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Sistema de Agenda TCE</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-container {
            background: white;
            border-radius: 15px;
            padding: 3rem;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            max-width: 500px;
            width: 90%;
        }
        .login-title {
            text-align: center;
            color: #333;
            margin-bottom: 2rem;
        }
        .user-card {
            border: 2px solid #e9ecef;
            border-radius: 10px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .user-card:hover {
            border-color: #667eea;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .user-card.admin {
            border-left: 5px solid #dc3545;
        }
        .user-card.supervisor {
            border-left: 5px solid #ffc107;
        }
        .user-card.agent {
            border-left: 5px solid #28a745;
        }
        .user-role {
            font-size: 0.8rem;
            font-weight: bold;
            text-transform: uppercase;
            margin-bottom: 0.5rem;
        }
        .user-role.admin {
            color: #dc3545;
        }
        .user-role.supervisor {
            color: #ffc107;
        }
        .user-role.agent {
            color: #28a745;
        }
        .user-name {
            font-size: 1.1rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 0.3rem;
        }
        .user-id {
            font-size: 0.8rem;
            color: #666;
            font-family: monospace;
        }
        .login-icon {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: #667eea;
        }
        .system-info {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 2rem;
            text-align: center;
        }
        .system-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 0.5rem;
        }
        .system-subtitle {
            color: #666;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="system-info">
            <div class="login-icon">
                <i class="fas fa-calendar-check"></i>
            </div>
            <div class="system-title">Sistema de Agenda TCE</div>
            <div class="system-subtitle">Selecciona un usuario para iniciar sesi贸n</div>
        </div>

        <h2 class="login-title">Iniciar Sesi贸n</h2>

        <!-- Usuario Administrador -->
        <div class="user-card admin" onclick="loginUser('682e2e8d8be24eb085a7fcc5', 'admin')">
            <div class="user-role admin">
                <i class="fas fa-crown me-1"></i>Administrador
            </div>
            <div class="user-name">Alejandro Botero</div>
            <div class="user-id">ID: 682e2e8d8be24eb085a7fcc5</div>
        </div>

        <!-- Usuario Supervisor -->
        <div class="user-card supervisor" onclick="loginUser('673a97324cec319c00c284e1', 'supervisor')">
            <div class="user-role supervisor">
                <i class="fas fa-user-tie me-1"></i>Supervisor
            </div>
            <div class="user-name">Yorman </div>
            <div class="user-id">ID: </div>
        </div>

        <!-- Usuario Agente -->
        <div class="user-card agent" onclick="loginUser('67680d4862732ee82e054a57', 'agent')">
            <div class="user-role agent">
                <i class="fas fa-user me-1"></i>Agente
            </div>
            <div class="user-name">Bersntein</div>
            <div class="user-id">ID: </div>
        </div>

        <div class="text-center mt-4">
            <small class="text-muted">
                <i class="fas fa-info-circle me-1"></i>
                Sistema de prueba - Selecciona un usuario para simular el inicio de sesi贸n
            </small>
        </div>
    </div>

    <script>
        function loginUser(userId, role) {
            // Mostrar loading
            const card = event.currentTarget;
            const originalContent = card.innerHTML;
            card.innerHTML = '<div class="text-center"><i class="fas fa-spinner fa-spin"></i> Iniciando sesi贸n...</div>';
            
            // Simular delay de login
            setTimeout(() => {
                // Crear formulario para enviar datos
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/login-simulado';
                
                const userIdInput = document.createElement('input');
                userIdInput.type = 'hidden';
                userIdInput.name = 'userId';
                userIdInput.value = userId;
                
                const roleInput = document.createElement('input');
                roleInput.type = 'hidden';
                roleInput.name = 'role';
                roleInput.value = role;
                
                form.appendChild(userIdInput);
                form.appendChild(roleInput);
                document.body.appendChild(form);
                form.submit();
            }, 1000);
        }
    </script>
</body>
</html>
